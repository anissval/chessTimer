<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@android:color/holo_green_dark"
    tools:context="com.val.aniss.chesstimer.DashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/holo_green_light"
        android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/holo_orange_light"
        android:layout_weight="40">

        <Chronometer
            android:id="@+id/chronometer_chess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:orientation="vertical"
        android:layout_weight="20"
        android:gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imageButton_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                app:srcCompat="@drawable/ic_settings_black_48dp" />

            <ImageButton
                android:id="@+id/imageButton_start_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                app:srcCompat="@drawable/ic_play_circle_filled_black_48dp" />

            <ImageButton
                android:id="@+id/imageButton_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                app:srcCompat="@drawable/ic_stop_black_48dp" />

            <ImageButton
                android:id="@+id/imageButton_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                app:srcCompat="@drawable/ic_view_list_black_48dp" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_purple"
        android:layout_weight="40">

        <Chronometer
            android:id="@+id/chronometer_chess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    </LinearLayout>

</FrameLayout>
